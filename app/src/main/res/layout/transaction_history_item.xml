<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60"
        android:layout_margin="@dimen/dim_10"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp">

       <TextView
           android:layout_width="wrap_content"
           android:id="@+id/tv_credit"
           android:layout_margin="@dimen/dim_10"
           android:textStyle="normal"
           android:text="Credit"
           android:layout_gravity="center_vertical"
           android:textColor="#82b64a"
           android:layout_height="wrap_content" />
        <TextView
           android:layout_width="wrap_content"
           android:id="@+id/tv_add_to_wallet"
           android:layout_margin="@dimen/dim_10"
           android:textStyle="normal"
           android:text="@string/add_to_wallet"
           android:layout_gravity="center|top"
           android:textColor="#000000"
           android:layout_height="wrap_content" />
        <TextView
           android:layout_width="wrap_content"
           android:id="@+id/tv_withdraw_wallet"
           android:layout_margin="@dimen/dim_10"
           android:textStyle="normal"
           android:text="@string/date"
           android:layout_gravity="center|bottom"
           android:textColor="#000000"
           android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_credit_value"
            android:layout_margin="@dimen/dim_10"
            android:textStyle="normal"
            android:text="@string/rs_symbol"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_gravity="center|right"
            android:textColor="#82b64a"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


</RelativeLayout>