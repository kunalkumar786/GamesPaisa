<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dim_10"
        android:id="@+id/rl_option_name"
        android:background="@drawable/rounded_corner_textview"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_subcat_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="left"
        android:paddingBottom="@dimen/dim_4"
        android:paddingLeft="@dimen/dim_14"
        android:paddingRight="@dimen/dim_14"
        android:paddingTop="@dimen/dim_4"

        android:layout_centerVertical="true"

        android:text="Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dim_13"
        tools:ignore="MissingConstraints" />
<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/ic_chevron_right_black_24dp"
    android:padding="@dimen/dim_10"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>